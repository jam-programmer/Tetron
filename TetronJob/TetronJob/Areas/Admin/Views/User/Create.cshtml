@model Framework.ViewModels.User.InsertUserViewModel
@{
    ViewData["Title"] = "افزودن کاربر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Scripts
{
    <script src="~/assets/vendor/libs/jdate/jdate.js"></script>
    <script src="~/assets/vendor/libs/flatpickr/flatpickr-jdate.js"></script>
    <script src="~/assets/vendor/libs/flatpickr/l10n/fa-jdate.js"></script>

    <script src="~/assets/vendor/libs/jquery-timepicker/jquery-timepicker.js"></script>
    <script src="~/assets/vendor/libs/pickr/pickr.js"></script>
    
    

    <script src="~/assets/js/forms-pickers.js"></script>
}

@section Style
{
    <link rel="stylesheet" href="~/assets/vendor/libs/flatpickr/flatpickr.css">
    <link rel="stylesheet" href="~/assets/vendor/libs/bootstrap-datepicker/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/assets/vendor/libs/bootstrap-daterangepicker/bootstrap-daterangepicker.css">
    <link rel="stylesheet" href="~/assets/vendor/libs/jquery-timepicker/jquery-timepicker.css">
}                                
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">
            کاربران /
        </span> افزودن کاربر
    </h4>

    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.Alert != null)
            {
                <div class="alert alert-warning alert-dismissible d-flex align-items-center" role="alert">
                    <i class="bx bx-xs bx-wallet me-2"></i>
                    @ViewBag.Alert
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card mb-4">
                <h5 class="card-header heading-color">افزودن کاربر جدید</h5>
                <form asp-area="Admin" asp-controller="User" asp-action="Create" enctype="multipart/form-data">
                    <div class="card-body">
                        
                        
                        <div class="col-md-3 col-12 mb-4">

                            <div class="avatar avatar-xl">
                                <img id="imagePath_1" src="~/assets/img/avatars/1.png" alt="آواتار" class="rounded-circle">
                            </div>
                            <label class="form-label mt-4"> انتخاب تصویر </label>
                            <input asp-for="AvatarFile" type="file" onchange="ChangeImage(this,1)"  
                                   id="image_1"
                                   class="form-control" />


                        </div>
                        
                        
                        
                        
                        
                        

                        <div class="row">
                            <div class="col-md-6 col-12 mb-4">
                                <label class="form-label">نام و نام خانوادگی</label>
                                <input asp-for="UserName" type="text" class="form-control" placeholder="نام و نام خانوادگی" />
                                <span class="text-danger" asp-validation-for="UserName"></span>

                            </div>
                            <div class="col-md-6 col-12 mb-4">
                                <label class="form-label">ایمیل</label>
                                <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل" />
                                <span class="text-danger" asp-validation-for="Email"></span>

                            </div>
                            <div class="col-md-6 col-12 mb-4">
                                <label class="form-label">شماره موبایل</label>
                                <input class="form-control text-start" type="tel" asp-for="PhoneNumber" id="html5-tel-input" dir="ltr" />
                                <span class="text-danger" asp-validation-for="Email"></span>

                            </div>


                            <div class="col-md-6 col-12 mb-4">
                                <label class="form-label">رمز عبور</label>
                                <input asp-for="Password" type="text" class="form-control text-start" id="basic-default-password32"
                                       placeholder="············" aria-describedby="basic-default-password" dir="ltr">
                                <span class="text-danger" asp-validation-for="Password"></span>

                            </div>
                            <div class="col-md-6 col-12 mb-4">
                                <label for="exampleFormControlSelect1" class="form-label">انتخاب نقش کاربری</label>
                                <select asp-for="RoleId" asp-items="@ViewBag.Roles" class="form-select" id="exampleFormControlSelect1" aria-label="Default select example">
                                    <option selected="selected" disabled="disabled">یک نقش انتخاب کنید</option>
                                    
                                </select>

                            </div>


                            <div class="col-md-6 col-12 mb-4">
                                <label for="flatpickr-date" class="form-label">تاریخ تولد</label>
                                <input asp-for="Birthday" type="date" class="form-control flatpickr-input" placeholder="YYYY/MM/DD" id="flatpickr-date">
                            </div>

                        </div>


                        <div class="mt-3">
                            <button type="submit" class="btn btn-sm btn-primary">ثبت</button>
                            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-sm btn-warning text-white">بازگشت</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>